<%-include('partials/paymentHeader')-%>

<div class="address-main">
    <p><span class="highlight">Shipping-address</span> > payment > confirmation</p>
    <div class="address-box">
        <h1>Shipping-address</h1>
        <form action="/user" method="post">
            <label for="name">NAME *</label>
            <input type="text" placeholder="eg: John" name="name" required autofocus>
            <label for="email">Email *</label>
            <input type="text" placeholder="eg: John@email.com" name="email" required>
            <label for="phone">Phone Number *</label>
            <input type="text" placeholder="eg: 854-22x-xxxx" name="phone" required>
            <label for="address">address *</label>
            <input type="text" placeholder="eg: wall st " name="address" required>
            <label for="Landmark">LandMark</label>
            <input type="text" placeholder="eg: any place near your address...." name="landmark" required>
            <label for="city">City *</label>
            <input type="text" placeholder="eg: New York City" name="city" required>
            <label for="state">State *</label>
            <input type="text" placeholder="eg: New York" name="state" required>
            <label for="Country">Country</label>
            <input type="drop-down" placeholder="eg: US" name="country" required>
            <label for="Zipcode">zip/Postal code *</label>
            <input type="text" placeholder="eg: 45xxxx" name="zipcode" required>
            <button >Continue For Payment</button>
        </form>
    </div>
</div>
</div>
<%-include('partials/paymentFooter')-%>